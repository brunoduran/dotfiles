# i3status configuration file.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß (snitchel symbol)
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    color_bad = "#586E75"
    color_good = "#000000"
    color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
    format = " cpu  %usage "
}

disk "/" {
    # format = " hdd %avail "
    format = " ⛁ %avail "
}

ethernet _first_ {
    # %speed needs root privileges
    format_up = " lan: %ip %speed "
    format_down = " no lan "
}

wireless _first_ {
    format_up = " %essid %quality "
    # format_up = "📶 %bitrate at %essid %quality"
    format_down = " no wifi "
}

battery all {
    # format = "%status %percentage %remaining %emptytime"
    format = " %status %percentage"
    format_down = "No battery"
    last_full_capacity = true
    integer_battery_capacity = true
    # status_chr = ""
    status_chr = "⚡"
    # status_bat = "bat"
    # status_bat = "☉"
    status_bat = ""
    # status_unk = "?"
    status_unk = ""
    # status_full = ""
    status_full = "☻"
    low_threshold = 15
    threshold_type = time
}

tztime local {
    format = " %d.%m. %H:%M "
}
