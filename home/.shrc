#!/bin/sh

# Waiting for a command
if test -v SSH_CLIENT -o -v SSH_TTY; then
  PS1="[$USER@$(uname -n)]"' ${PWD##*/}$ '
else
  PS1='${PWD##*/}$ '
fi
# Waiting to complete command
PS2='> '  

# modify workstation (terminal) parameters
. "$HOME/.sh/tty"

# aliases
. "$HOME/.sh/aliases"

# functions
. "$HOME/.sh/functions"

# local configuration
test -f "$HOME/.shrc_local" && . "$HOME/.shrc_local"
